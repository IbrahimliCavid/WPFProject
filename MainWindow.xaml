<Window x:Class="WPFLearn.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFLearn"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="170"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!--Logo And Button -->
        <Border Background="#2B5596" Grid.Column="0" Grid.Row ="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="#174089">
                    <DockPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Image Source="/Image/Icon/logo.png" Height="24"/>
                        <Label Content="Library App" Foreground="White" FontWeight="Bold" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                    </DockPanel>
                </Border>

                <Border Grid.Row="1">
                    <DockPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Image>
                            <Image.Style>
                                <Style TargetType="Image">
                                    <Setter Property="Source" Value="/Image/Icon/document.png"/>
                                    <Setter Property="Width" Value="100"/>
                                    <Setter Property="Height" Value="Auto"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Width" Value="110"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Image.Style>
                        </Image>
                        
                    </DockPanel>
                </Border>
            </Grid>
         </Border>

         <!--header -->
        <Border Background="#2B5596" Grid.Column="1" Grid.Row ="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Border Background="white" Padding="20,0,0,0">
                    <DockPanel Width="70" HorizontalAlignment="Right">
                        <Button Content="__" Style="{DynamicResource miniButtons}" FontSize="16"/>
                        <Button Content="x" x:Name="btn_close" Click="btn_close_Click" Style="{DynamicResource miniButtons}" FontSize="16"/>
                    </DockPanel>
                </Border>
            </Grid>
        </Border>

        <!--Aside -->
        <Border Background="#2B5596" Grid.Column="0" Grid.Row ="1"/>
    </Grid>
    
    
    
</Window>
